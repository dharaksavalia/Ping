<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/menu_button_margin"
    tools:context=".ping.AcknowledgementPing">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/design_label"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/design_help_content"
        android:scrollbars="vertical"
        >
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coding_label"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:textSize="20sp"
        android:text="@string/coding_help_content_ping"
        >

    </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third_party_library"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="20sp"
            android:text="@string/coding_third_party_library"
            >

        </TextView>


    </LinearLayout>
</ScrollView>
</LinearLayout>
