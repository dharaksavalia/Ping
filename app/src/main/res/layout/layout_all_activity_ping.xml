<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@drawable/targets_ping"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/timeAllActivitiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12dp"
        android:layout_margin="@dimen/menu_space"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/background_light"
        android:text="" />
    <TextView
        android:id="@+id/allactivitiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/menu_space"
        android:layout_toLeftOf="@id/timeAllActivitiesTextView"
        android:textSize="18dp"
        android:text="TextView" />
    </RelativeLayout>

