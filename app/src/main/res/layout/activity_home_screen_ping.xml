<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ping.PingHomeScreensActivity"
    >

    <Button
        android:id="@+id/show_my_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show my contacts"
        android:layout_centerInParent="true"  />

    <Button
        android:id="@+id/search_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Activities"
        android:layout_below="@id/show_my_contacts"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
