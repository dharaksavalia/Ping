            android:theme="@style/NoTitle" />
        <activity
            android:name=".AcknowledgementAssignment3"
            android:parentActivityName=".DictionaryAssignment3"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".ScroggleStatusAssignment5"
            android:parentActivityName=".ScroggleAssignment5"
            android:theme="@style/NoTitle" />
        <activity
            android:name=".ScroggleAcknowledgementAssignment5"
            android:parentActivityName=".ScroggleAssignment5"
            android:theme="@style/Theme.Transparent" />

        <activity
            android:name=".InstructionsActivityAssignment5"
            android:parentActivityName=".ScroggleAssignment5"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitle" />

        <service android:name=".WordGameMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".WordGameInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


        <activity android:name=".FCMActivity"
            android:theme="@style/AppTheme"/>




    </application>

</manifest>